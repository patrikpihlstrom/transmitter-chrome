{
	"manifest_version": 2,
	"name": "Transmitter",
	"description": "This extension will send magnet links to your transmission server",
	"version": "1.0",
	"options_page": "options.html",
	"background": {
		"scripts": ["lib/jquery.min.js", "app/transmitter.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "options.html"
	},
	 "content_scripts": [ {
		"js": ["lib/jquery.min.js"],
		"matches": [ "http://*/*", "https://*/*"]
	}],
	"permissions": [
		"storage",
		"contextMenus"
	],
	"icons": {
		"16": "icon-small.png"
	}
}
